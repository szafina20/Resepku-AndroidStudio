<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sub Judul untuk Nama Resep -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Resep"
            android:textColor="#121010"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingBottom="8dp" />

        <!-- Nama Makanan -->
        <TextView
            android:id="@+id/tv_recipe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF9933"
            android:textSize="30sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:background="@drawable/edit_text_bg" />

        <!-- Sub Judul untuk Bahan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bahan"
            android:textColor="#121010"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Bahan -->
        <TextView
            android:id="@+id/tv_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Ingredients"
            android:background="@drawable/edit_text_bg"
            android:textColor="#462819"
            android:minLines="3" />

        <!-- Sub Judul untuk Langkah-Langkah -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Langkah-Langkah"
            android:textColor="#121010"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <!-- Langkah-Langkah -->
        <TextView
            android:id="@+id/tv_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:text="Steps"
            android:background="@drawable/edit_text_bg"
            android:textColor="#462819"
            android:minLines="4" />

        <!-- Tombol Edit -->
        <Button
            android:id="@+id/btn_edit_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Resep"
            android:backgroundTint="#FF9933"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

        <!-- Tombol Kembali -->
        <Button
            android:id="@+id/btn_backHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kembali"
            android:backgroundTint="#4CAF50"
            android:textColor="#462819"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
